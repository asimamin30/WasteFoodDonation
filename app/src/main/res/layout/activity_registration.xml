<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".common.RegistrationActivity">

    <ImageView
        android:id="@+id/reg_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/slogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reg_img">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/fullName_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="10dp"
                    android:hint="Full Name"
                    android:inputType="textCapWords"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullName_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/usernameEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="10dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/nic_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/nicNoEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_nic"
                    android:drawablePadding="10dp"
                    android:hint="CNIC"
                    android:inputType="number"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/phoneno_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nic_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/phNoEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="10dp"
                    android:hint="Phone No"
                    android:inputType="phone"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneno_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <EditText
                    android:id="@+id/pwdEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_keylog"
                    android:drawablePadding="10dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grayColor" />


            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/usertype_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/materialTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Type"
                    android:textColorHint="@color/black">

                    <AutoCompleteTextView
                        android:id="@+id/materialType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="Select Your Type"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/usercategory_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usertype_layout"
                app:layout_constraintWidth_percent=".8"
                app:neomorph_background_color="@color/background"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="8dp"
                app:neomorph_highlight_color="@color/highlight"
                app:neomorph_shadow_color="@color/shadow_color"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/materialCatTIL"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Category"
                    android:textColorHint="@color/black">

                    <AutoCompleteTextView
                        android:id="@+id/materialCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:text="Select Your Category"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ripple_btn"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usercategory_layout"
                app:layout_constraintWidth_percent=".8" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nextBtn" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>